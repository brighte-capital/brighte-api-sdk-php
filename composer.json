{
    "name": "brightecapital/api-sdk",
    "description": "SDK for interacting with Brighte APIs",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "3.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Young",
            "email": "chris.young@brighte.com.au"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "psr/log": "^1.1",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "fig/http-message-util": "^1.1",
        "guzzlehttp/psr7": "^1.6",
        "slim/psr7": "^1.1|^0.6",
        "json-mapper/json-mapper": "^1.3"
    },
    "scripts": {
        "cs": "phpcs -p",
        "cbf": "phpcbf",
        "test": "phpunit --colors=always",
        "test:coverage": "phpunit --colors=always --coverage-text --coverage-clover=coverage.xml"
    },
    "autoload": {
        "psr-4": {
            "BrighteCapital\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrighteCapital\\Api\\Tests\\": "tests"
        }
    }
}
